{
  "name": "italian-real-estate-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Monorepo for an Italian Real Estate platform (Backend API + Admin Dashboard + Static site).",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "serverless-http": "^3.2.0",
    "@vercel/node": "^3.0.0",
    "@prisma/client": "^5.17.0",
    "prisma": "^5.17.0",
    "tsx": "^4.20.3"
  },
  "scripts": {
    "build": "npm run prisma:generate && npm run build:dist",
    "prisma:generate": "prisma generate",
    "build:dist": "mkdir -p dist && cp -r api dist/ && cp -r prisma dist/ && cp -r node_modules/@prisma dist/",
    "vercel-build": "npm run build",
    "prepare": "if [ -z \"$CI\" ]; then husky install; fi",
    "postinstall": "if [ -z \"$CI\" ]; then husky install; else echo \"Skipping husky in CI\"; fi",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier . -w",
    "format:check": "prettier . -c",
    "typecheck": "echo \"Run package-specific type checks\"",
    "test": "echo \"No tests configured for serverless deployment\""
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "tsx": "^4.20.3",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier -w"
    ],
    "*.{json,md,css,html}": [
      "prettier -w"
    ]
  }
}
