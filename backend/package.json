{
  "name": "italian-real-estate-backend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Backend API for Italian Real Estate platform (Express + TypeScript + Prisma + PostgreSQL)",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vercel dev",
    "build": "echo 'Vercel builds functions automatically; no separate build needed'",
    "start": "vercel dev",
    "local-dev": "tsx watch src/server.ts",
    "local-build": "prisma generate && tsc -p tsconfig.json",
    "local-start": "node dist/server.js",
    "postinstall": "prisma generate",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "format": "prettier . -w",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "test": "vitest run --reporter=default",
    "test:ui": "vitest"
  },
  "dependencies": {
    "@prisma/client": "^5.17.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "qs": "^6.13.0",
    "serverless-http": "^3.2.0",
    "slugify": "^1.6.6",
    "streamifier": "^0.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.7",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.12",
    "@types/streamifier": "^0.1.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "prisma": "^5.17.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.5.4",
    "vercel": "^37.0.0",
    "vitest": "^2.0.5"
  }
}