{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2022",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": [
      "../node_modules/@types",
      "./node_modules/@types"
    ],
    "skipDefaultLibCheck": true
  },
  "include": [
    "src"
  ]
}