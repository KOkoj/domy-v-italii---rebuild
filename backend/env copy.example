# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/realestate?schema=public"

# JWT
JWT_SECRET="dev_jwt_secret_change_me"
REFRESH_TOKEN_SECRET="dev_refresh_secret_change_me"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_EXPIRES_IN="30d"

# CORS
# Comma-separated list, defaults to localhost dev ports internally if unset
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173"

# Cloudinary
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
