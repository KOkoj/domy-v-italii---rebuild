# Admin seed
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="admin123456"
ADMIN_NAME="Admin"

# Security (Rate Limiting)
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Server
PORT="3001"
NODE_ENV="development"
